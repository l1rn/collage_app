<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.student.ScheduleForStudentsActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bBackStudentCard"
                android:text="Выйти"
                android:backgroundTint="#FEEFC3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish"
                android:textSize="20dp"
                android:textColor="#202124"
                />
            <Space
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="#202124"
                android:id="@+id/tStudentGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                tools:text="Группа: ИП-302"
                />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="РАСПИСАНИЕ ДЛЯ ПТУ"
                android:textSize="28dp"
                android:textColor="#202124"
                android:fontFamily="@font/mulish"
                android:textFontWeight="600"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lSubjectsForStudents"
            android:layout_width="match_parent"
            android:background="#FFF"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>