<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.teacher.TeachersScheduleForStudentsActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/bBackFromTeacherSchedule"
            android:layout_width="wrap_content"
            android:text="Назад"
            android:backgroundTint="#FAD2CF"
            android:fontFamily="@font/mulish"
            android:textSize="24dp"
            android:textColor="#202124"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:textFontWeight="600"
            android:fontFamily="@font/mulish"
            android:text="Расписание преподователя"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lTeacherSchedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>